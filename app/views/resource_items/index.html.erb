<h1>Listing resource_items</h1>

<table>
  <thead>
    <tr>
      <th>Resource type</th>
      <th>Resource name</th>
      <th>Resource path</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @resource_items.each do |resource_item| %>
      <tr>
        <td><%= resource_item.resource_type %></td>
        <td><%= resource_item.resource_name %></td>
        <td><%= resource_item.resource_path %></td>
        <td><%= link_to 'Show', resource_item %></td>
        <td><%= link_to 'Edit', edit_resource_item_path(resource_item) %></td>
        <td><%= link_to 'Destroy', resource_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

